<theme>
    <formatVersion>3</formatVersion>
    <include>./../nostalgic.xml</include>
	
	<variables>
		<selectorColor>e21d2c</selectorColor>
		<selectColor>000000</selectColor>
	</variables>
	
	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>e21d2c</selectorColor>
			<selectedColor>000000</selectedColor>
		</textlist>
		
	</view>
	
	<view name="detailed">	
		<image name="md_image">
			<pos>0.678 0.430</pos>
			<maxSize>0.218 0.290</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
	</view>	
	
	<view name="video">

		<video name="md_video">
			<pos>0.678 0.430</pos>
			<maxSize>0.218 0.290</maxSize>
			<origin>0.5 0.5</origin>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<delay>0</delay>
		</video>
	
	</view>
	
</theme>