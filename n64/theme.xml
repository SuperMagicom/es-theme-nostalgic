<theme>
    <formatVersion>3</formatVersion>
    <include>./../nostalgic.xml</include>

	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>ff2d1e</selectorColor>
			<selectedColor>ffc001</selectedColor>
		</textlist>
		
	</view>

	<view name="detailed">	
		<image name="md_image">
			<pos>0.700 0.382</pos>
			<maxSize>0.240 0.320</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
	</view>
	
	<view name="video">
	
		<video name="md_video">
			<pos>0.700 0.382</pos>
			<maxSize>0.240 0.320</maxSize>
			<origin>0.5 0.5</origin>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<delay>0</delay>
		</video>

	</view>
	
</theme>