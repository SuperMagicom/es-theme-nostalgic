	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>000000</selectorColor>
			<selectedColor>c1121c</selectedColor>
		</textlist>
		
	</view>

	<view name="detailed">	
		<image name="md_image">
			<pos>0.715 0.382</pos>
			<maxSize>0.240 0.320</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
	</view>	
	
	<view name="video">

