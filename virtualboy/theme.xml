<theme>
    <formatVersion>3</formatVersion>
    <include>./../nostalgic.xml</include>

	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>960000</selectorColor>
			<selectedColor>000000</selectedColor>
		</textlist>
		
	</view>
	
	<view name="detailed">	
		<image name="md_image">
			<pos>0.720 0.30</pos>
			<maxSize>0.480 0.280</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
	</view>	
	
	<view name="video">

		<video name="md_video">
			<pos>0.720 0.30</pos>
			<maxSize>0.480 0.280</maxSize>
			<origin>0.5 0.5</origin>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<delay>0</delay>
		</video>
		
	</view>
	
</theme>